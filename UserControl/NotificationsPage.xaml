<Page x:Class="login_store.NotificationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:login_store"
      Background="Transparent"
      Title="NotificationsPage" Loaded="Page_Loaded">

    <Page.Resources>

        <local:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolToVisibility"/>

        <Style x:Key="NotificationItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#2AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3AFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Border CornerRadius="12" ClipToBounds="True" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Background>
            <ImageBrush ImageSource="/login_store;component/Images/BG_SHOP/BG5.jpg" Stretch="Fill"/>
        </Border.Background>

        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95" Background="#111111">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Panel.ZIndex="2">
                    <Button x:Name="btnMinimize" Click="MinimizeButton_Click" Content="—" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowControlButton}"/>
                    <Button x:Name="btnMaximizeRestore" Click="MaximizeRestoreButton_Click" Content="☐" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowControlButton}" Margin="5,0,0,0"/>
                    <Button x:Name="btnClose" Click="CloseButton_Click" Content="X" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowCloseButton}" Margin="5,0,0,0"/>
                </StackPanel>

                <Grid Margin="10, 50, 10, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="#333" BorderThickness="0,0,0,1" Margin="10,0,10,10" Padding="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/login_store;component/Images/Vamoslogo1.png" Width="60" Height="60" 
                                   Grid.Column="0" VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="Logo_Click"/>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="btnVouchers" Content="🎟️" ToolTip="โค้ดส่วนลดของฉัน" Foreground="White" Margin="5,0" FontSize="16" Background="Transparent" BorderThickness="0"  Cursor="Hand" Click="btnVouchers_Click"/>
                                <Button x:Name="btnNotifications" Content="🔔" ToolTip="การแจ้งเตือน" Foreground="Yellow" FontWeight="Bold" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnNotifications_Click" />
                                <Button x:Name="btnOrders" Content="📦" ToolTip="ประวัติการสั่งซื้อ" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnOrders_Click"/>
                                <Button x:Name="btnWishlist" Content="❤️" ToolTip="รายการโปรด" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnWishlist_Click"/>
                                <Button x:Name="btnCart" Content="🛒" ToolTip="ตะกร้าสินค้า" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnCart_Click"/>
                                <Button x:Name="btnLogout" Content="👤" ToolTip="โปรไฟล์" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnProfile_Click"/>
                                <Button x:Name="btAboutUs" Content="ℹ️" ToolTip="เกี่ยวกับเรา" Margin="10,0" Foreground="White" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnAboutUs_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="10,0,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="การแจ้งเตือน" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button x:Name="btnMarkAllRead" Content="อ่านทั้งหมด" 
                                     Style="{StaticResource SecondaryActionButtonStyle}" 
                                     HorizontalAlignment="Right" VerticalAlignment="Center"
                                     Padding="10,5" Click="btnMarkAllRead_Click"/>
                        </Grid>

                        <ListBox Grid.Row="1" x:Name="NotificationsListBox"
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource NotificationItemStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Message}" Foreground="{Binding StatusForeground}" FontWeight="{Binding StatusWeight}" FontSize="14" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Timestamp}" Foreground="Gray" FontSize="12" Margin="0,5,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="1" Content="Mark as Read" 
                                                Visibility="{Binding IsRead, Converter={StaticResource InvertedBoolToVisibility}}"
                                                Click="btnMarkOneRead_Click" Tag="{Binding NotificationId}"
                                                Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock x:Name="txtNoNotifications" Text="ยังไม่มีการแจ้งเตือน"
                                   Grid.Row="1" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Margin="20" Visibility="Collapsed"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>

</Page>