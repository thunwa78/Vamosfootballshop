<Page x:Class="login_store.AdminDashboardContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Background="Transparent"
      Title="AdminDashboardContentPage" Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📊 ภาพรวม Dashboard" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <Border Grid.Row="1" Background="#1AFFFFFF" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="แสดงข้อมูลตั้งแต่:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="dpStartDate" Width="140" VerticalAlignment="Center"/>
                <TextBlock Text="ถึง:" Foreground="White" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <DatePicker x:Name="dpEndDate" Width="140" VerticalAlignment="Center"/>

                <Button x:Name="btnRefresh" Content="🔄 รีเฟรชข้อมูล" 
                        Padding="15,5" Margin="20,0,0,0" 
                        Click="btnRefresh_Click"/>

                <TextBlock x:Name="txtLastUpdated" Text="(อัปเดตล่าสุด: ...)" 
                           Foreground="Gray" FontStyle="Italic" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <UniformGrid Grid.Row="2" Columns="3" Margin="0,0,0,10">

            <Border Background="#2ECC71" CornerRadius="5" Padding="20" Margin="5">
                <StackPanel>
                    <TextBlock Text="💰 ยอดขาย (ที่อนุมัติแล้ว)" Foreground="White" FontSize="14"/>
                    <TextBlock x:Name="txtTotalSales" Text="0.00 บาท" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border x:Name="PendingCard" Background="#E67E22" CornerRadius="5" Padding="20" Margin="5"
                    Cursor="Hand" MouseLeftButtonUp="PendingCard_Click">
                <StackPanel>
                    <TextBlock Text="คำสั่งซื้อใหม่ (รอตรวจสอบ)" Foreground="White" FontSize="14"/>
                    <TextBlock x:Name="txtPendingOrders" Text="0" Foreground="White" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="#3498DB" CornerRadius="5" Padding="20" Margin="5">
                <StackPanel>
                    <TextBlock Text="👤 ลูกค้าทั้งหมด" Foreground="White" FontSize="14"/>
                    <TextBlock x:Name="txtNewCustomers" Text="0" Foreground="White" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Border Grid.Row="3" Background="#1AFFFFFF" CornerRadius="5" Padding="10" Margin="5,10,5,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="แนวโน้มรายได้ (ตามช่วงวันที่เลือก)" Foreground="White" FontSize="18" FontWeight="Bold" Margin="5"/>

                <lvc:CartesianChart Grid.Row="1" x:Name="RevenueChart" Margin="10" LegendLocation="None"
                                    Series="{Binding RevenueSeriesCollection}">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding RevenueLabels}" Foreground="White">
                            <lvc:Axis.Separator>
                                <lvc:Separator Stroke="#444" Step="2" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="รายได้ (บาท)" MinValue="0" Foreground="White" LabelFormatter="{Binding RevenueFormatter}">
                            <lvc:Axis.Separator>
                                <lvc:Separator Stroke="#444" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </Border>

        <Grid Grid.Row="4" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1AFFFFFF" CornerRadius="5" Padding="10" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="⭐ 10 อันดับสินค้าขายดี (ตามช่วงวันที่เลือก)" Foreground="White" FontSize="18" FontWeight="Bold" Margin="5"/>
                    <lvc:CartesianChart Grid.Row="1" x:Name="TopSellingChart" Margin="10" LegendLocation="None" 
                                        Series="{Binding TopSellingSeriesCollection}" DataTooltip="{x:Null}" Loaded="TopSellingChart_Loaded">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="จำนวน (ชิ้น)" MinValue="0" Foreground="White">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Stroke="#444" />
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Labels="{Binding TopSellingLabels}" Foreground="White">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Stroke="#444" />
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="#1AFFFFFF" CornerRadius="5" Padding="10" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="สินค้าใกล้หมดสต็อก (&lt; 10 ชิ้น)" Foreground="White" FontSize="18" FontWeight="Bold" Margin="5"/>
                    <DataGrid Grid.Row="1" x:Name="LowStockDataGrid"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="Transparent" BorderBrush="#333" Foreground="White"
                              CanUserAddRows="False" GridLinesVisibility="Horizontal">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#3AFFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2AFFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="Auto"/>
                            <DataGridTextColumn Header="ชื่อสินค้า" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="คงเหลือ" Binding="{Binding StockQuantity}" Width="Auto">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="Red"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>