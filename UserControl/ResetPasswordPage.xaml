<Page x:Class="login_store.ResetPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="ResetPasswordPage">

    <Border CornerRadius="12" 
            ClipToBounds="True" 
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Background>
            <ImageBrush ImageSource="/login_store;component/Images/BG_SHOP/BG5.jpg" Stretch="Fill"/>
        </Border.Background>
        <Border CornerRadius="10" 
                BorderThickness="2" 
                Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            
            <Grid>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,15,15,0">
                    
                    <Button x:Name="btnMinimize" 
                            Click="MinimizeButton_Click" 
                            Content="—" 
                            FontWeight="Bold" 
                            FontSize="14" 
                            Cursor="Hand" 
                            VerticalAlignment="Top">
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    Width="30" 
                                                    Height="30" 
                                                    CornerRadius="4">
                                                <ContentPresenter VerticalAlignment="Center" 
                                                                  HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4C4C4C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnMaximizeRestore" 
                            Click="MaximizeRestoreButton_Click" 
                            Content="☐" 
                            FontWeight="Bold" 
                            FontSize="14" 
                            Cursor="Hand"
                            VerticalAlignment="Top" 
                            Margin="5,0,0,0">
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    Width="30" 
                                                    Height="30" 
                                                    CornerRadius="4">
                                                <ContentPresenter VerticalAlignment="Center" 
                                                                  HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4C4C4C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnClose" 
                            Click="CloseButton_Click" 
                            Content="X" 
                            FontWeight="Bold" 
                            FontSize="14"
                            Cursor="Hand"
                            VerticalAlignment="Top"
                            Margin="5,0,0,0">
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    Width="30" 
                                                    Height="30" 
                                                    CornerRadius="4">
                                                <ContentPresenter VerticalAlignment="Center"
                                                                  HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <Viewbox HorizontalAlignment="Center" 
                         VerticalAlignment="Center" 
                         Stretch="Uniform" 
                         MaxWidth="550" 
                         MaxHeight="800">
                    
                    <StackPanel Width="220" Orientation="Vertical">
                        
                        <TextBlock Text="ตั้งรหัสผ่านใหม่"
                                   Foreground="White" 
                                   FontSize="25" 
                                   FontWeight="Medium" 
                                   FontFamily="Segoe UI"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                        
                        <TextBlock x:Name="txtInfo" 
                                   Text="สำหรับอีเมล: ..."
                                   Foreground="LightGray" 
                                   FontSize="12" 
                                   TextWrapping="Wrap" 
                                   TextAlignment="Center" 
                                   Margin="0,5,0,0"/>

                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,30,0,0" 
                                    VerticalAlignment="Bottom">
                            
                            <TextBlock Text="รหัสผ่านใหม่" 
                                       Foreground="DarkGray"
                                       FontSize="12"/>
                            
                            <TextBlock x:Name="tbPasswordError"
                                       Text="(Error)"
                                       Foreground="Yellow" 
                                       FontSize="11" 
                                       Margin="5,0,0,0" 
                                       VerticalAlignment="Bottom"
                                       TextWrapping="Wrap"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                        
                        <Grid Margin="0,5,0,0">
                            <PasswordBox x:Name="txtNewPassword" FontSize="13" Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center" Padding="30,0,30,0"
                                          KeyDown="Input_KeyDown">
                                <PasswordBox.Background>
                                    <ImageBrush ImageSource="/Images/key-icon (2).png" Stretch="None" AlignmentX="Left"/>
                                </PasswordBox.Background>
                            </PasswordBox>
                            <TextBox x:Name="txtNewPasswordVisible" FontSize="13" Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center" Padding="30,0,30,0" Visibility="Collapsed"
                                      KeyDown="Input_KeyDown">
                                <TextBox.Background>
                                    <ImageBrush ImageSource="/Images/key-icon (2).png" Stretch="None" AlignmentX="Left"/>
                                </TextBox.Background>
                            </TextBox>
                            <ToggleButton x:Name="btnToggleNewPassword" HorizontalAlignment="Right" VerticalAlignment="Center" Width="25" Height="25" Margin="0,0,5,0" Cursor="Hand" Background="Transparent" BorderThickness="0" IsChecked="False" Click="btnToggleNewPassword_Click">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                        <Image x:Name="EyeIconNew" Source="/Images/eye-open.png" Width="16" Height="16" Stretch="Uniform"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#333333"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Background" Value="#555555"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </Grid>

                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,15,0,0" 
                                    VerticalAlignment="Bottom">
                            
                            <TextBlock Text="ยืนยันรหัสผ่านใหม่" 
                                       Foreground="DarkGray" 
                                       FontSize="12"/>
                            
                            <TextBlock x:Name="tbConfirmPasswordError" 
                                       Text="(Error)" 
                                       Foreground="Yellow" 
                                       FontSize="11" 
                                       Margin="5,0,0,0" 
                                       VerticalAlignment="Bottom" 
                                       TextWrapping="Wrap" 
                                       Visibility="Collapsed"/>
                        </StackPanel>
                        <Grid Margin="0,5,0,0">
                            <PasswordBox x:Name="txtConfirmNewPassword" FontSize="13" Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center" Padding="30,0,30,0"
                                          KeyDown="Input_KeyDown">
                                <PasswordBox.Background>
                                    <ImageBrush ImageSource="/Images/key-icon (2).png" Stretch="None" AlignmentX="Left"/>
                                </PasswordBox.Background>
                            </PasswordBox>
                            <TextBox x:Name="txtConfirmNewPasswordVisible" FontSize="13" Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center" Padding="30,0,30,0" Visibility="Collapsed"
                                      KeyDown="Input_KeyDown">
                                <TextBox.Background>
                                    <ImageBrush ImageSource="/Images/key-icon (2).png" Stretch="None" AlignmentX="Left"/>
                                </TextBox.Background>
                            </TextBox>
                            <ToggleButton x:Name="btnToggleConfirmPassword" HorizontalAlignment="Right" VerticalAlignment="Center" Width="25" Height="25" Margin="0,0,5,0" Cursor="Hand" Background="Transparent" BorderThickness="0" IsChecked="False" Click="btnToggleConfirmPassword_Click">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                        <Image x:Name="EyeIconConfirm" Source="/Images/eye-open.png" Width="16" Height="16" Stretch="Uniform"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#333333"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Background" Value="#555555"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </Grid>

                        <Button x:Name="btnSavePassword" Content="บันทึกรหัสผ่านใหม่" 
                                Click="SavePassword_Click" 
                                Foreground="White" 
                                FontSize="12"
                                Cursor="Hand" 
                                Margin="0,35,0,0"
                                BorderThickness="0">
                            
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF00BF63"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFB2F0C1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="150" 
                                            Height="40" 
                                            CornerRadius="20" 
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" 
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,15,0,10">
                            <TextBlock Text="← กลับสู่หน้าล็อกอิน" 
                                       Foreground="White" 
                                       FontSize="12" 
                                       Cursor="Hand" 
                                       MouseLeftButtonUp="BackToLogin_Click" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </Border>
    </Border>
</Page>