<Window x:Class="login_store.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Viewer" Height="500" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">

    <Border Background="#1C1C1E" CornerRadius="12" BorderBrush="#555" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="10">
                <TextBlock x:Name="txtTitle" Text="ตารางไซส์" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0"/>
                <Button x:Name="btnClose" Click="btnClose_Click" Content="X" FontWeight="Bold" Width="30" Height="30" Background="DarkRed" Foreground="White" BorderThickness="0" HorizontalAlignment="Right"/>
            </Grid>

            <Border Grid.Row="1" Margin="10" Background="#111" CornerRadius="5">
                <Image x:Name="imgViewer" Stretch="Uniform" />
            </Border>

        </Grid>
    </Border>
</Window>