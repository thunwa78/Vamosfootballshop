<Page x:Class="login_store.AdminManageProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      Background="Transparent"
      Title="AdminManageProductsPage" Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <Button Content="+ เพิ่มสินค้าใหม่" 
                    DockPanel.Dock="Right" 
                    Style="{StaticResource ProActionButtonGreenStyle}" 
                    Padding="15,5" 
                    Click="btnAddProduct_Click"/>

            <TextBlock Text="📦 จัดการสินค้าคงคลัง (Products)" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
        </DockPanel>

        <Border Grid.Row="1" Background="#1AFFFFFF" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ค้นหาสินค้า:" Foreground="White" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" x:Name="txtSearch" Padding="5" Height="30" VerticalContentAlignment="Center" TextChanged="txtSearch_TextChanged"/>
            </Grid>
        </Border>

        <DataGrid Grid.Row="2" x:Name="ProductsDataGrid"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Background="#1AFFFFFF" BorderBrush="#333" Foreground="White"
                  CanUserAddRows="False" SelectionMode="Single">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3AFFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>

                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2AFFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="#222"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>

            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="50"/>
                <DataGridTextColumn Header="ชื่อสินค้า" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="หมวดหมู่" Binding="{Binding CategoryName}" Width="150"/>
                <DataGridTextColumn Header="แบรนด์" Binding="{Binding BrandName}" Width="150"/>
                <DataGridTextColumn Header="ราคาเริ่มต้น" Binding="{Binding BasePrice, StringFormat=N2}" Width="100"/>

                <DataGridTemplateColumn Header="Actions" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                                <Button Content="แก้ไข"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="DodgerBlue" Foreground="White"
                                        Margin="5,0"
                                        Click="btnEditProduct_Click"
                                        Tag="{Binding ProductId}"/>

                                <Button x:Name="btnToggle"
                                        
                                        Margin="5,0"
                                        Click="btnToggleActive_Click"
                                        Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryActionButtonStyle}">
                                            <Setter Property="Content" Value="ซ่อน"/>
                                            <Setter Property="Background" Value="DarkGoldenrod"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Content" Value="แสดง"/>
                                                    <Setter Property="Background" Value="DarkGreen"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="ลบถาวร"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="DarkRed" Foreground="White"
                                        Margin="5,0"
                                        Click="btnDeleteProduct_Click"
                                        Tag="{Binding ProductId}"/>

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>