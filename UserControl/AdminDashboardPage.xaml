<Page x:Class="login_store.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="AdminDashboardPage">

    <Page.Resources>
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4C4C4C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WindowCloseButton" BasedOn="{StaticResource WindowControlButton}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AdminSidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Background" Value="#1C1C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Border CornerRadius="12" ClipToBounds="True" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Background>
            <ImageBrush ImageSource="/login_store;component/Images/BG_SHOP/BG5.jpg" Stretch="Fill"/>
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Panel.ZIndex="2">
                    <Button x:Name="btnMinimize" Click="MinimizeButton_Click" Content="—" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowControlButton}"/>
                    <Button x:Name="btnMaximizeRestore" Click="MaximizeRestoreButton_Click" Content="☐" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowControlButton}" Margin="5,0,0,0"/>
                    <Button x:Name="btnClose" Click="CloseButton_Click" Content="X" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowCloseButton}" Margin="5,0,0,0"/>
                </StackPanel>

                <Grid Margin="10, 50, 10, 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#1AFFFFFF" CornerRadius="5" Margin="0,0,10,0">
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="txtAdminName" Text="Admin: ..." Foreground="White" FontSize="16" FontWeight="Bold" Margin="10,15,10,10" HorizontalAlignment="Center"/>
                            <Separator Background="#555"/>

                            <Button x:Name="btnDashboard" Content="📊 Dashboard (ภาพรวม)" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnDashboard_Click"/>
                            <Button x:Name="btnManageOrders" x:FieldModifier="public" Content="📦 จัดการคำสั่งซื้อ" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageOrders_Click"/>
                            <Button x:Name="btnManageAds" Content="🖼️ จัดการโฆษณา" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageAds_Click"/>
                            <Button x:Name="btnManageVouchers" Content="🎟️ จัดการโค้ดส่วนลด" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageVouchers_Click"/>
                            <Button x:Name="btnManageProducts" Content="👟 จัดการสินค้า" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageProducts_Click"/>
                            <Button x:Name="btnManageBrands" Content="🏷️ จัดการแบรนด์" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageBrands_Click"/>
                            <Button x:Name="btnManageCategories" Content="📚 จัดการหมวดหมู่" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageCategories_Click"/>
                            <Button x:Name="btnManageModels" Content="👟 จัดการรุ่นสินค้า" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageModels_Click"/>
                            <Button x:Name="btnManageUsers" Content="👥 จัดการลูกค้า" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageUsers_Click"/>
                            <Button x:Name="btnManageAboutUs" Content="ℹ️ จัดการ About us" Style="{StaticResource AdminSidebarButtonStyle}" Click="btnManageAboutUs_Click"/>

                            <Button Content="ออกจากระบบ" Style="{StaticResource AdminSidebarButtonStyle}" Click="LogoutButton_Click" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Border>

                    <Frame x:Name="AdminContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>

                </Grid>
            </Grid>
        </Border>
    </Border>
</Page>