<Window x:Class="login_store.AddEditModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddEditModelWindow" Height="300" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Border Background="#1C1C1E" CornerRadius="10" BorderBrush="#333" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
                <TextBlock x:Name="txtTitle" Text="เพิ่มรุ่นสินค้าใหม่" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="X" Background="DarkRed" Foreground="White" FontWeight="Bold" Width="30" Height="30" BorderThickness="0" Click="btnClose_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="ชื่อรุ่น (Model Name):" Foreground="#AAA" Margin="0,0,0,5"/>
                <TextBox x:Name="txtModelName" Padding="5" Background="#333" Foreground="White" BorderBrush="#555"/>

                <TextBlock Text="สังกัดแบรนด์ (Brand):" Foreground="#AAA" Margin="0,15,0,5"/>
                <ComboBox x:Name="cmbBrand" Padding="5" DisplayMemberPath="Name" SelectedValuePath="BrandId"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="btnSave" Content="บันทึก" Background="#2ECC71" Foreground="White" FontWeight="Bold" Padding="20,8" BorderThickness="0" Click="btnSave_Click"/>
                <Button Content="ยกเลิก" Background="#555" Foreground="White" Padding="15,8" BorderThickness="0" Margin="10,0,0,0" Click="btnClose_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>