<Window x:Class="login_store.AddEditAdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Ad" Height="450" Width="450"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">

    <Grid Background="#2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitle" Text="เพิ่มโฆษณาใหม่" Grid.Row="0" FontSize="20" FontWeight="Bold" Margin="15,15,15,5" Foreground="White"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,10">
            <StackPanel Orientation="Vertical">

                <TextBlock Text="รูปภาพโฆษณา:" Margin="0,5,0,5" Foreground="White"/>
                <Border BorderBrush="#666" BorderThickness="1" Height="120" CornerRadius="4" Background="#333" Margin="0,0,0,10">
                    <Grid>
                        <Image x:Name="imgPreview" Stretch="UniformToFill" Source="/Images/placeholder.png"/>
                        <TextBlock x:Name="txtImagePlaceholder" Text="No Image Selected" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAA"/>
                    </Grid>
                </Border>
                <Button Content="เลือกไฟล์รูปภาพ..." Click="btnBrowse_Click" Style="{StaticResource SecondaryActionButtonStyle}" Padding="10,5" Margin="0,0,0,15"/>

                <TextBlock Text="Target URL (ลิงก์ปลายทาง):" Margin="0,0,0,5" Foreground="White"/>
                <TextBox x:Name="txtTargetUrl" Padding="5" Text="http://" Margin="0,0,0,10" Foreground="Black"/>

                <TextBlock Text="ลำดับการแสดงผล (ยิ่งน้อย ยิ่งแสดงก่อน):" Margin="0,0,0,5" Foreground="White"/>
                <TextBox x:Name="txtSortOrder" Padding="5" Text="0" Width="100" HorizontalAlignment="Left" PreviewTextInput="Number_PreviewTextInput" Foreground="Black"/>

                <CheckBox x:Name="chkIsActive" Content="เปิดใช้งานโฆษณานี้" IsChecked="True" Margin="0,15,0,10" Foreground="White"/>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button x:Name="btnSave" Content="บันทึก" Width="100" 
                    Style="{StaticResource ProActionButtonGreenStyle}" Click="btnSave_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnCancel" Content="ยกเลิก" Width="100" 
                    Style="{StaticResource SecondaryActionButtonStyle}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>