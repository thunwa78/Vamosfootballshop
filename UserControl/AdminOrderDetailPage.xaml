<Page x:Class="login_store.AdminOrderDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Background="Transparent"
      Title="AdminOrderDetailPage" Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnGoBack" Grid.Row="0" Content="← กลับไปหน้ารายการออเดอร์" 
                HorizontalAlignment="Left" 
                Background="Transparent" Foreground="#58A6FF"
                BorderThickness="0" Cursor="Hand"
                FontWeight="Bold" FontSize="14"
                Margin="0,0,0,10" 
                Padding="10,5"
                Click="btnGoBack_Click"/>

        <TextBlock x:Name="txtTitle" Grid.Row="1" Text="รายละเอียดออเดอร์ #..." Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1AFFFFFF" CornerRadius="5" Padding="15" Margin="5">
                <StackPanel>
                    <TextBlock Text="ลูกค้า (Customer)" Foreground="#AAA"/>
                    <TextBlock x:Name="txtCustomerName" Text="..." Foreground="White" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
                    <TextBlock x:Name="txtCustomerEmail" Text="..." Foreground="#AAA" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#1AFFFFFF" CornerRadius="5" Padding="15" Margin="5">
                <StackPanel>
                    <TextBlock Text="ที่อยู่จัดส่ง (Default)" Foreground="#AAA"/>
                    <TextBlock x:Name="txtShippingAddress" Text="ไม่พบข้อมูลที่อยู่..." Foreground="White" FontSize="14" TextWrapping="Wrap"/>
                    <TextBlock x:Name="txtShippingPhone" Text="..." Foreground="#AAA" FontSize="12"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="#1AFFFFFF" CornerRadius="5" Padding="15" Margin="5">
                <StackPanel>
                    <TextBlock Text="สรุปยอด (Summary)" Foreground="#AAA"/>
                    <TextBlock x:Name="txtTotalAmount" Text="Total: 0.00" Foreground="LightGreen" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="txtDiscount" Text="Discount: 0.00" Foreground="Orange" FontSize="14"/>
                    <TextBlock x:Name="txtVoucher" Text="Voucher: -" Foreground="#AAA" FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>

        <DataGrid Grid.Row="3" x:Name="ItemsDataGrid" Margin="5,10,5,5"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Background="#1AFFFFFF" BorderBrush="#333" Foreground="White"
                  CanUserAddRows="False">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3AFFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="#222"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="รูป" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePreview}" Height="50" Width="50" Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="ชื่อสินค้า" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="ไซส์" Binding="{Binding SizeName}" Width="100"/>
                <DataGridTextColumn Header="จำนวน" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="ราคา (ณ ตอนซื้อ)" Binding="{Binding Price, StringFormat=N2}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>