<Window x:Class="login_store.TeamMemberDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TeamMemberDetailWindow" Height="500" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="10" Background="#1A1A1A" BorderBrush="#333" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Background="Transparent" Foreground="Gray" FontWeight="Bold" FontSize="14"
                    BorderThickness="0" Width="30" Height="30" Click="CloseButton_Click"/>


            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="200" Height="200" CornerRadius="100" Background="#333" BorderBrush="#555" BorderThickness="2" Margin="0,0,0,20">
                    <Image x:Name="imgMember" Stretch="UniformToFill"/>
                </Border>
                <TextBlock x:Name="txtMemberName" Text="Member Name" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtMemberRole" Text="Member Role" Foreground="#AAA" FontSize="18" HorizontalAlignment="Center"/>
            </StackPanel>


            <Button Grid.Row="2" Content="ปิด" HorizontalAlignment="Center"
                    Background="#2ECC71" Foreground="White" FontWeight="Bold" FontSize="16"
                    Padding="30,10" BorderThickness="0"
                    Click="CloseButton_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Border>
</Window>