<Window x:Class="login_store.AddEditAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Address" Height="600" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">

    <Border Background="#1C1C1E" CornerRadius="12" BorderBrush="#333" BorderThickness="2" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <TextBlock x:Name="txtTitle" Text="เพิ่มที่อยู่ใหม่" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
                <Button x:Name="btnClose" Click="btnClose_Click" Content="X" FontWeight="Bold" Width="30" Height="30" Background="DarkRed" Foreground="White" BorderThickness="0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,10">
                <StackPanel Orientation="Vertical">

                    <TextBlock Text="ป้ายกำกับ (เช่น บ้าน, ที่ทำงาน)" Foreground="White" Margin="0,5,0,5"/>
                    <TextBox x:Name="txtAddressLabel" Padding="5"/>

                    <TextBlock Text="ชื่อ-นามสกุล ผู้รับ" Foreground="White" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtFullName" Padding="5"/>

                    <TextBlock Text="เบอร์โทรศัพท์" Foreground="White" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtPhoneNumber" Padding="5"/>

                    <TextBlock Text="ที่อยู่ (บ้านเลขที่, ถนน)" Foreground="White" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtAddressLine1" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="ตำบล/แขวง" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtSubDistrict" Padding="5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="อำเภอ/เขต" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtDistrict" Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="จังหวัด" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtProvince" Padding="5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="รหัสไปรษณีย์" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPostalCode" Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <CheckBox x:Name="chkIsDefault" Content="ตั้งเป็นที่อยู่หลัก" Foreground="White" Margin="0,20,0,10"/>

                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
                <Button x:Name="btnSave" Content="บันทึก" Width="100" Padding="10" Background="DarkGreen" Foreground="White" Margin="5" Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="ยกเลิก" Width="100" Padding="10" Background="#555" Foreground="White" Margin="5" Click="btnClose_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>