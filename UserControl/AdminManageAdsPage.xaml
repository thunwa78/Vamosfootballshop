<Page x:Class="login_store.AdminManageAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="AdminManageAdsPage" Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ProActionButtonGreenStyle" TargetType="Button">
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#27AE60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ADADAD"/>
            <Setter Property="BorderBrush" Value="#ADADAD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="🖼️ จัดการสไลด์โฆษณา" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>

            <Button x:Name="btnAddAd" Grid.Column="1" Content="＋ เพิ่มโฆษณาใหม่"
                    Click="btnAddAd_Click"
                    Style="{StaticResource ProActionButtonGreenStyle}"
                    Padding="15,8"/>
        </Grid>

        <DataGrid Grid.Row="1" x:Name="AdsDataGrid"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Background="#1AFFFFFF"
                  BorderBrush="#333"
                  Foreground="White"
                  CanUserAddRows="False"
                  SelectionMode="Single">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3AFFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2AFFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="#222"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding AdId}" Width="50"/>
                <DataGridTextColumn Header="ลำดับ" Binding="{Binding SortOrder}" Width="Auto"/>
                <DataGridTemplateColumn Header="รูปภาพ" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePath}" Stretch="Uniform" Width="100" Height="50" Margin="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Target URL" Binding="{Binding TargetUrl}" Width="2*"/>
                <DataGridTextColumn Header="สถานะ" Binding="{Binding StatusText}" Width="Auto"/>

                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="แก้ไข"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="DodgerBlue" Foreground="White"
                                        Margin="5" Click="btnEditAd_Click"
                                        Tag="{Binding AdId}"/>

                                <Button Content="{Binding ToggleText}"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="{Binding ToggleColor}" Foreground="White"
                                        Margin="5" Click="btnToggleAd_Click"
                                        Tag="{Binding AdId}"/>
                                <Button Content="ลบ"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="DarkRed" Foreground="White"
                                        Margin="5" Click="btnDeleteAd_Click"
                                        Tag="{Binding AdId}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>