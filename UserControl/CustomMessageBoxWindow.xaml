<Window x:Class="login_store.CustomMessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="Auto" Width="320"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">
    <Border CornerRadius="12" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" Margin="15">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#ADB5BD" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnClose" Content="✕"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Width="20" Height="20" Margin="-10,-10,0,0"
                    Foreground="#6C757D" Background="Transparent" BorderThickness="0"
                    FontSize="12" Cursor="Hand"/>

            <Image Grid.Row="0" x:Name="imgIcon" Source="/Images/check_icon.png"
                   Width="40" Height="40" Margin="0,5,0,15"/>

            <TextBlock Grid.Row="1" x:Name="txtTitle" Text="Title"
                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8"
                       Foreground="#212529"/>

            <TextBlock Grid.Row="2" x:Name="txtMessage" Text="Message goes here."
                       TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20"
                       Foreground="#495057" FontSize="14"/>

            <Button Grid.Row="3" x:Name="btnOk" Content="OK"
                    Click="btnOk_Click"
                    Background="#28A745" Foreground="White"
                    FontSize="14" FontWeight="SemiBold"
                    Padding="40,8" HorizontalAlignment="Center"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>