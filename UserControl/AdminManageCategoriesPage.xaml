<Page x:Class="login_store.AdminManageCategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="AdminManageCategoriesPage" Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="🏷️ จัดการหมวดหมู่ (Categories)" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1AFFFFFF" CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="รายการหมวดหมู่" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <ListBox Grid.Row="1" x:Name="CategoryListBox" 
                             Background="#222" BorderThickness="0" Foreground="White">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Name}" Padding="5" VerticalAlignment="Center" FontSize="14"/>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal">

                                        <Button x:Name="btnEditCategory" Content="แก้ไข" 
                                                Background="#FFC107" Foreground="Black"
                                                Padding="10,2" Margin="0,0,5,0"
                                                Click="btnEditCategory_Click"
                                                Tag="{Binding}"/>

                                        <Button x:Name="btnDeleteCategory" Content="ลบ" 
                                                Background="DarkRed" Foreground="White"
                                                Padding="10,2"
                                                Click="btnDeleteCategory_Click"
                                                Tag="{Binding CategoryId}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtCategoryName" Grid.Column="0" Padding="5" Height="30" VerticalContentAlignment="Center"/>

                        <Button x:Name="btnSaveCategory" Grid.Column="1" Content="เพิ่มหมวดหมู่ใหม่" 
                                Background="DarkGreen" Foreground="White"
                                Padding="15,5" Margin="5,0,0,0"
                                Click="btnSaveCategory_Click"/>

                        <Button x:Name="btnCancelEdit" Grid.Column="2" Content="ยกเลิก" 
                                Background="#555" Foreground="White"
                                Padding="15,5" Margin="5,0,0,0"
                                Click="btnCancelEdit_Click"
                                Visibility="Collapsed"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>