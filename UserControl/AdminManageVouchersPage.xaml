<Page x:Class="login_store.AdminManageVouchersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Background="Transparent"
      Title="AdminManageVouchersPage" Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ProActionButtonGreenStyle" TargetType="Button">
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ADADAD"/>
            <Setter Property="BorderBrush" Value="#ADADAD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="🎟️ จัดการโค้ดส่วนลด (Vouchers)" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button x:Name="btnAddVoucher" Grid.Column="1" Content="＋ สร้างโค้ดใหม่"
                    Click="btnAddVoucher_Click"
                    Style="{StaticResource ProActionButtonGreenStyle}"
                    Padding="15,8"/>
        </Grid>

        <DataGrid Grid.Row="1" x:Name="VouchersDataGrid"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Background="#1AFFFFFF"
                  BorderBrush="#333"
                  Foreground="White"
                  CanUserAddRows="False"
                  SelectionMode="Single">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3AFFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2AFFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="#222"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding VoucherId}" Width="50"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#F39C12"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="คำอธิบาย" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="มูลค่าส่วนลด" Binding="{Binding DiscountDisplay}" Width="120"/>
                <DataGridTextColumn Header="ซื้อขั้นต่ำ" Binding="{Binding MinPurchase, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="เริ่มใช้ได้" Binding="{Binding ValidFrom, StringFormat='dd/MM/yy HH:mm'}" Width="120"/>
                <DataGridTextColumn Header="หมดอายุ" Binding="{Binding ValidTo, StringFormat='dd/MM/yy HH:mm'}" Width="120"/>
                <DataGridTextColumn Header="สถานะ" Binding="{Binding StatusText}" Width="80"/>

                <DataGridTemplateColumn Header="Actions" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="แก้ไข"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="DodgerBlue" Foreground="White"
                                        Margin="5" Click="btnEditVoucher_Click"
                                        Tag="{Binding VoucherId}"/>

                                <Button Content="{Binding ToggleText}"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="{Binding ToggleColor}" Foreground="White"
                                        Margin="5" Click="btnToggleVoucher_Click"
                                        Tag="{Binding}"/>

                                <Button Content="ลบ"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="DarkRed" Foreground="White"
                                        Margin="5" Click="btnDeleteVoucher_Click"
                                        Tag="{Binding VoucherId}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>