<Page x:Class="login_store.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="LoginPage">

    <Border CornerRadius="12"
            ClipToBounds="True"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Background>
            <ImageBrush ImageSource="/login_store;component/Images/BG_SHOP/BG5.jpg" Stretch="Fill"/>
        </Border.Background>

        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,15,15,0">
                    
                    <Button x:Name="btnMinimize" 
                            Click="MinimizeButton_Click" 
                            Content="—" FontWeight="Bold" 
                            FontSize="14" 
                            Cursor="Hand" 
                            VerticalAlignment="Top">
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    Width="30" 
                                                    Height="30" 
                                                    CornerRadius="4">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4C4C4C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="btnMaximizeRestore" 
                            Click="MaximizeRestoreButton_Click" 
                            Content="☐" 
                            FontWeight="Bold" 
                            FontSize="14" 
                            Cursor="Hand" 
                            VerticalAlignment="Top" 
                            Margin="5,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" Width="30" Height="30" CornerRadius="4">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4C4C4C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="btnClose" Click="CloseButton_Click" Content="X" FontWeight="Bold" FontSize="14" Cursor="Hand" VerticalAlignment="Top" Margin="5,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" Width="30" Height="30" CornerRadius="4">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <Viewbox HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Stretch="Uniform"
                         MaxWidth="550"
                         MaxHeight="800">
                    
                    <StackPanel Width="220" Orientation="Vertical">
                        <Image Source="/login_store;component/Images/Vamoslogo1.png" 
                               Width="130" 
                               Height="130" />
                        
                        <TextBlock Text="VAMOS SHOP" 
                                   Foreground="White" 
                                   FontSize="15" 
                                   FontWeight="Medium" 
                                   FontFamily="Segoe UI" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="ร้านขายอุปกรณ์ฟุตบอลอันดับ 1 ในประเทศไทย" 
                                   Foreground="LightGray" 
                                   FontSize="10" 
                                   TextWrapping="Wrap" 
                                   TextAlignment="Center" 
                                   Margin="0,5,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0" VerticalAlignment="Bottom">
                            
                            <TextBlock Text="Username or Email" 
                                       Foreground="DarkGray" 
                                       FontSize="10"/>
                            
                            <TextBlock x:Name="tbUsernameError" 
                                       Text="ชื่อผู้ใช้งานไม่ถูกต้อง" 
                                       Foreground="Yellow" 
                                       FontSize="11" 
                                       Margin="5,0,0,0" 
                                       VerticalAlignment="Bottom" 
                                       Visibility="Collapsed"/>
                        </StackPanel>
                        <TextBox x:Name="txtUsername" 
                                 FontSize="13" 
                                 Foreground="White" 
                                 CaretBrush="LightGray" 
                                 BorderBrush="DarkGray" 
                                 BorderThickness="0,0,0,2" 
                                 Height="28" 
                                 VerticalContentAlignment="Center" 
                                 Margin="0,5,0,0" 
                                 Padding="30,0,0,0"
                                 KeyDown="Input_KeyDown">
                            <TextBox.Background>
                                <ImageBrush ImageSource="/Images/user-icon (2).png" 
                                            Stretch="None" 
                                            AlignmentX="Left" 
                                            AlignmentY="Center"/>
                            </TextBox.Background>
                        </TextBox>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,15,0,0"
                                    VerticalAlignment="Bottom">
                            <TextBlock Text="Password" 
                                       Foreground="DarkGray"
                                       FontSize="10"/>
                            <TextBlock x:Name="tbPasswordError" 
                                       Text="รหัสผ่านไม่ถูกต้อง" 
                                       Foreground="Yellow" 
                                       FontSize="11" 
                                       Margin="5,0,0,0" 
                                       VerticalAlignment="Bottom" 
                                       Visibility="Collapsed"/>
                        </StackPanel>

                        <Grid Margin="0,5,0,0">
                            <PasswordBox x:Name="txtPassword"
                                         FontSize="13" 
                                         Foreground="White" 
                                         CaretBrush="LightGray"
                                         BorderBrush="DarkGray"
                                         BorderThickness="0,0,0,2"
                                         Height="28"
                                         VerticalContentAlignment="Center" 
                                         Padding="30,0,30,0" 
                                         KeyDown="Input_KeyDown">
                                <PasswordBox.Background>
                                    <ImageBrush ImageSource="/Images/key-icon (2).png" 
                                                Stretch="None" 
                                                AlignmentX="Left"/>
                                </PasswordBox.Background>
                            </PasswordBox>

                            <TextBox x:Name="txtPasswordVisible"
                                     FontSize="13" 
                                     Foreground="White" 
                                     CaretBrush="LightGray" 
                                     BorderBrush="DarkGray" 
                                     BorderThickness="0,0,0,2" 
                                     Height="28"
                                     VerticalContentAlignment="Center" 
                                     Padding="30,0,30,0" 
                                     Visibility="Collapsed" 
                                     KeyDown="Input_KeyDown">
                                <TextBox.Background>
                                    <ImageBrush ImageSource="/Images/key-icon (2).png" 
                                                Stretch="None" 
                                                AlignmentX="Left"/>
                                </TextBox.Background>
                            </TextBox>

                            <ToggleButton x:Name="btnTogglePassword"
                                          HorizontalAlignment="Right" 
                                          VerticalAlignment="Center"
                                          Width="25" Height="25"
                                          Margin="0,0,5,0" Cursor="Hand"
                                          Background="Transparent" BorderThickness="0"
                                          IsChecked="False"
                                          Click="btnTogglePassword_Click">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                        <Image x:Name="EyeIcon" Source="/Images/eye-open.png" 
                                                               Width="16" 
                                                               Height="16" 
                                                               Stretch="Uniform"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" 
                                                     Value="True">
                                                <Setter Property="Background" 
                                                        Value="#333333"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" 
                                                     Value="True">
                                                <Setter Property="Background" 
                                                        Value="#555555"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </Grid>

                        <Button x:Name="btnLogin" Content="LOG IN" 
                                Click="Login_Click" 
                                Foreground="White" 
                                FontSize="12" 
                                Cursor="Hand" 
                                Margin="0,25,0,0" 
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF00BF63"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFB2F0C1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="150" 
                                            Height="40" 
                                            CornerRadius="20" 
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" 
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,10,0,0">
                            
                            <TextBlock Text="Forgot Password?" 
                                       Foreground="DarkGray" 
                                       FontSize="10" />
                            
                            <TextBlock Text="Reset" 
                                       Foreground="#FF2FDD89"
                                       FontSize="10" 
                                       Margin="8,0,0,0" 
                                       Cursor="Hand" 
                                       MouseLeftButtonUp="OpenForgotPassword_Click" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,5,0,10">
                            
                            <TextBlock Text="Don't have an account?" 
                                       Foreground="DarkGray" 
                                       FontSize="10" />
                            
                            <TextBlock Text="Register" 
                                       Foreground="#FF2FDD89" 
                                       FontSize="10" 
                                       Margin="8,0,0,0" 
                                       Cursor="Hand" 
                                       MouseLeftButtonUp="OpenRegister_Click" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </Border>
    </Border>
</Page>