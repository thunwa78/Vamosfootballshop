<Page x:Class="login_store.CheckoutConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      Title="CheckoutConfirmationPage" Loaded="Page_Loaded"
      Background="Transparent">

    <Page.Resources>
        <Style x:Key="ProActionButtonGreenStyle" TargetType="Button">
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ADADAD"/>
            <Setter Property="BorderBrush" Value="#ADADAD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="QuantityButton" TargetType="Button">
            <Setter Property="Background" Value="#3AFFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WindowCloseButton" BasedOn="{StaticResource WindowControlButton}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border CornerRadius="12" ClipToBounds="True" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Background>
            <ImageBrush ImageSource="/login_store;component/Images/BG_SHOP/BG5.jpg" Stretch="Fill"/>
        </Border.Background>

        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95" Background="#111111" Margin="0">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Panel.ZIndex="3">
                    <Button x:Name="btnMinimize" Click="MinimizeButton_Click" Content="—" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowControlButton}"/>
                    <Button x:Name="btnMaximizeRestore" Click="MaximizeRestoreButton_Click" Content="☐" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowControlButton}" Margin="5,0,0,0"/>
                    <Button x:Name="btnClose" Click="CloseButton_Click" Content="X" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowCloseButton}" Margin="5,0,0,0"/>
                </StackPanel>

                <Grid Margin="10, 50, 10, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="#333" BorderThickness="0,0,0,1" Margin="10,0,10,10" Padding="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/login_store;component/Images/Vamoslogo1.png" Width="60" Height="60" Grid.Column="0" VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="Logo_Click"/>

                            

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="btnVouchers" Content="🎟️" ToolTip="โค้ดส่วนลดของฉัน" Foreground="White" Margin="5,0" FontSize="16" Background="Transparent" BorderThickness="0"  Cursor="Hand" Click="btnVouchers_Click"/>
                                <Button x:Name="btnNotifications" Content="🔔" ToolTip="การแจ้งเตือน" Foreground="White" Margin="5,0" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnNotifications_Click"/>
                                <Button x:Name="btnOrders" Content="📦" ToolTip="ประวัติการสั่งซื้อ" Foreground="White" Margin="5,0" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnOrders_Click"/>
                                <Button x:Name="btnWishlist" Content="❤️" ToolTip="รายการโปรด" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnWishlist_Click"/>
                                <Button x:Name="btnCart" Content="🛒" ToolTip="ตะกร้าสินค้า" Foreground="#F39C12" FontWeight="Bold" Margin="5,0" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnCart_Click"/>
                                <Button x:Name="btnProfile" Content="👤" ToolTip="โปรไฟล์" Foreground="White" Margin="5,0" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnProfile_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                        <StackPanel>

                            <TextBlock Text="ยืนยันคำสั่งซื้อ" Foreground="White" FontSize="30" FontWeight="Bold" Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">

                                    <TextBlock Text="🏠 ที่อยู่จัดส่ง" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <Border Background="#222" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                                        <StackPanel>
                                            <TextBlock x:Name="txtAddressName" Text="กรุณาบันทึกชื่อและที่อยู่จัดส่งในหน้าโปรไฟล์" Foreground="#AAA" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtAddressDetail" Text="[ไม่มีข้อมูลที่อยู่]" Foreground="#AAA" Margin="0,5,0,0"/>
                                            <Button Content="จัดการที่อยู่ / เลือกที่อยู่" Style="{StaticResource SecondaryActionButtonStyle}" Padding="10,5" Margin="0,10,0,0" HorizontalAlignment="Left" Click="btnManageAddress_Click"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="🛒 รายการสินค้า" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <DataGrid x:Name="CartItemsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="250"
                                              Background="#222" BorderBrush="#333" SelectionMode="Single"
                                              GridLinesVisibility="None" HeadersVisibility="Column">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="สินค้า" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="ขนาด" Binding="{Binding SizeName}" Width="Auto"/>
                                            <DataGridTextColumn Header="ราคา/ชิ้น" Binding="{Binding Price, StringFormat='N2'}" Width="Auto"/>
                                            <DataGridTemplateColumn Header="จำนวน" Width="100">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <Button Content="-" Style="{StaticResource QuantityButton}" Tag="{Binding VariantId}" Click="BtnDecreaseQuantity_Click"/>
                                                            <TextBlock Text="{Binding Quantity}" Margin="5,0" VerticalAlignment="Center" Foreground="Black"/>
                                                            <Button Content="+" Style="{StaticResource QuantityButton}" Tag="{Binding VariantId}" Click="BtnIncreaseQuantity_Click"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="รวม" Binding="{Binding SubTotal, StringFormat='N2'}" Width="Auto"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                </StackPanel>

                                <Border Grid.Column="2" Background="#222" CornerRadius="10" Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="สรุปยอดชำระ" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                                        <Grid Margin="0,5">
                                            <TextBlock Text="ราคาสินค้า (Subtotal)" Foreground="#AAA"/>
                                            <TextBlock x:Name="txtSubTotal" Text="0.00 บาท" HorizontalAlignment="Right" Foreground="#DDD"/>
                                        </Grid>

                                        <TextBlock Text="เลือกโค้ดส่วนลดของคุณ:" Foreground="White" Margin="0,10,0,5"/>
                                        <ComboBox x:Name="cmbMyVouchers" 
                                                  Margin="0,0,0,10"
                                                  SelectionChanged="cmbMyVouchers_SelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock Text="{Binding Code}" FontWeight="Bold" Foreground="#F39C12"/>
                                                        <TextBlock Text="{Binding Description}" Foreground="Black" FontSize="11"/>
                                                        <TextBlock Text="{Binding MinPurchaseText}" Foreground="Gray" FontStyle="Italic" FontSize="11"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>

                                        <Grid Margin="0,5">
                                            <TextBlock x:Name="txtDiscountLabel" Text="ส่วนลดที่ใช้:" Foreground="Orange"/>
                                            <TextBlock x:Name="txtDiscountValue" Text="-0.00 บาท" HorizontalAlignment="Right" Foreground="Orange"/>
                                        </Grid>

                                        <Separator Background="#555" Margin="0,15"/>

                                        <Grid Margin="0,5">
                                            <TextBlock Text="VAT (7%)" Foreground="#AAA"/>
                                            <TextBlock x:Name="txtVAT" Text="0.00 บาท" HorizontalAlignment="Right" Foreground="#DDD"/>
                                        </Grid>

                                        <Separator Background="White" Margin="0,15"/>

                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="ยอดรวมสุทธิ" Foreground="White" FontSize="22" FontWeight="Bold"/>
                                            <TextBlock Grid.Column="1" x:Name="txtFinalTotal" Text="0.00 บาท" HorizontalAlignment="Right" Foreground="LightGreen" FontSize="22" FontWeight="Bold"/>
                                        </Grid>

                                        <Button Content="ดำเนินการชำระเงิน (QR)" 
                                                Style="{StaticResource ProActionButtonGreenStyle}"
                                                Click="btnProceedToPayment_Click"
                                                Margin="0,30,0,0"
                                                x:Name="btnProceed"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                        </StackPanel>
                    </ScrollViewer>

                </Grid>
            </Grid>
        </Border>
    </Border>
</Page>