<Page x:Class="login_store.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      Title="OrdersPage" Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="OrderCardItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#2AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3AFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OrderStatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Pending Payment">
                    <Setter Property="Foreground" Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Approved">
                    <Setter Property="Foreground" Value="LightGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Shipped">
                    <Setter Property="Foreground" Value="SkyBlue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Border CornerRadius="12" ClipToBounds="True" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Background>
            <ImageBrush ImageSource="/login_store;component/Images/BG_SHOP/BG5.jpg" Stretch="Fill"/>
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95" Background="#111111">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Panel.ZIndex="3">
                    <Button x:Name="btnMinimize" Click="MinimizeButton_Click" Content="—" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowControlButton}"/>
                    <Button x:Name="btnMaximizeRestore" Click="MaximizeRestoreButton_Click" Content="☐" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowControlButton}" Margin="5,0,0,0"/>
                    <Button x:Name="btnClose" Click="CloseButton_Click" Content="X" FontWeight="Bold" FontSize="14" Style="{StaticResource WindowCloseButton}" Margin="5,0,0,0"/>
                </StackPanel>

                <Grid Margin="10, 50, 10, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="#333" BorderThickness="0,0,0,1" Margin="10,0,10,10" Padding="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/login_store;component/Images/Vamoslogo1.png" Width="60" Height="60" 
                                   Grid.Column="0" VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="Logo_Click"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                                
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="btnVouchers" Content="🎟️" ToolTip="โค้ดส่วนลดของฉัน" Foreground="White" Margin="5,0" FontSize="16" Background="Transparent" BorderThickness="0"  Cursor="Hand" Click="btnVouchers_Click"/>
                                <Button x:Name="btnNotifications" Content="🔔" ToolTip="การแจ้งเตือน" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnNotifications_Click"/>
                                <Button x:Name="btnOrders" Content="📦" ToolTip="ประวัติการสั่งซื้อ" Foreground="Orange" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnOrders_Click" />
                                <Button x:Name="btnWishlist" Content="❤️" ToolTip="รายการโปรด" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnWishlist_Click"/>
                                <Button x:Name="btnCart" Content="🛒" ToolTip="ตะกร้าสินค้า" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnCart_Click"/>
                                <Button x:Name="btnProfile" Content="👤" ToolTip="โปรไฟล์" Foreground="White" Margin="5" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnProfile_Click"/>
                                <Button x:Name="btAboutUs" Content="ℹ️" ToolTip="เกี่ยวกับเรา" Margin="10,0" Foreground="White" FontSize="16" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="btnAboutUs_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="10,0,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ประวัติการสั่งซื้อ" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                        <ListBox Grid.Row="1" x:Name="OrdersListBox" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource OrderCardItemStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding OrderId, StringFormat='Order #{0}'}" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding OrderDate, StringFormat='วันที่: dd MMM yyyy HH:mm'}" Foreground="LightGray" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="สถานะ:" Foreground="LightGray" FontSize="12"/>
                                            <TextBlock Text="{Binding Status}" Style="{StaticResource OrderStatusTextStyle}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="ยอดรวม:" Foreground="LightGray" FontSize="12"/>
                                            <TextBlock Text="{Binding TotalAmount, StringFormat='N2} บาท'}" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                        </StackPanel>
                                        <Button Grid.Column="3" Content="ดูรายละเอียด"
                                                Style="{StaticResource SecondaryActionButtonStyle}"
                                                Padding="10,5" Margin="10,0,0,0"
                                                Click="DetailsButton_Click"
                                                Tag="{Binding OrderId}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock x:Name="txtNoOrders" Text="คุณยังไม่มีคำสั่งซื้อ"
                                   Grid.Row="1" Foreground="White" FontSize="16"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Margin="20" Visibility="Collapsed"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Page>