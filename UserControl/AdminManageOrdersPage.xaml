<Page x:Class="login_store.AdminManageOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:login_store"
      Background="Transparent"
      Title="AdminManageOrdersPage" Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="จัดการคำสั่งซื้อ" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <Button x:Name="btnGoBack" Grid.Row="1" Content="← กลับไปหน้าจัดการลูกค้า" 
                HorizontalAlignment="Left" 
                Background="Transparent" Foreground="#58A6FF"
                BorderThickness="0" Cursor="Hand"
                FontWeight="Bold" FontSize="14"
                Margin="0,0,0,10" 
                Padding="10,5"
                Click="btnGoBack_Click"
                Visibility="Collapsed"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="รออนุมัติ (Pending)" Click="FilterButton_Click" Tag="Pending Approval" Background="#E67E22" Foreground="White" Margin="0,0,5,0"/>
            <Button Content="อนุมัติแล้ว (Approved)" Click="FilterButton_Click" Tag="Approved" Background="#2ECC71" Foreground="White" Margin="0,0,5,0"/>
            <Button Content="ทั้งหมด (All)" Click="FilterButton_Click" Tag="" Background="#95A5A6" Foreground="White" Margin="0,0,5,0"/>
            <Button Content="ยกเลิก/ปฏิเสธ (Cancelled)" Click="FilterButton_Click" Tag="Cancelled" Background="#A5A5A5" Foreground="White" Margin="0,0,5,0"/>
        </StackPanel>

        <DataGrid Grid.Row="3" x:Name="OrdersDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#1AFFFFFF"
                  BorderBrush="#333"
                  Foreground="White"
                  CanUserAddRows="False">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3AFFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2AFFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="#222"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="Auto"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="วันที่" Binding="{Binding OrderDate, StringFormat='dd/MM/yy HH:mm'}" Width="Auto"/>
                <DataGridTextColumn Header="ยอดรวม" Binding="{Binding TotalAmount, StringFormat='N2'}" Width="Auto"/>
                <DataGridTextColumn Header="สถานะ" Binding="{Binding Status}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Pending Approval">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Approved">
                                    <Setter Property="Foreground" Value="LightGreen"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Actions" Width="280">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                                <Button Content="ดูรายละเอียด"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="#007ACC" Foreground="White"
                                        Margin="5,0"
                                        Click="btnViewDetails_Click"
                                        Tag="{Binding OrderId}"/>

                                <Button Content="👁️ ดูสลิป"
                                        Style="{StaticResource SecondaryActionButtonStyle}"
                                        Background="DodgerBlue" Foreground="White"
                                        Margin="5,0"
                                        Click="btnViewSlip_Click"
                                        Visibility="{Binding ShowSlipButton}"
                                        Tag="{Binding SlipPath}"/>

                                <Button x:Name="btnApprove" Content="อนุมัติ"
                                        Click="btnApprove_Click"
                                        Background="Green" Foreground="White"
                                        Margin="5,0"
                                        Tag="{Binding OrderId}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ProActionButtonGreenStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Pending Approval">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button x:Name="btnReject" Content="ปฏิเสธ"
                                        Click="btnReject_Click"
                                        Background="DarkRed" Foreground="White"
                                        Margin="5,0"
                                        Tag="{Binding OrderId}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryActionButtonStyle}">
                                            <Setter Property="Background" Value="DarkRed"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Pending Approval">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>